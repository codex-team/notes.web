[color-scheme='dark'] {
  /**
   * Violet Dark Colors
   */
  --violet--bg-primary: #19141e;
  --violet--bg-secondary: #231A2C;
  --violet--bg-secondary-hover: #2C2237;
  --violet--border: #33293D;
  --violet--solid-secondary: #261636;
  --violet--solid-hover: #461577;
  --violet--solid: #913be6;
  --violet--text-secondary: #a389bd;
  --violet--text: #d9cee5;
  --violet--text-solid-foreground: #f2f1f4;
}

[color-scheme='light'] {
  /**
   * Violet Light Colors
   */
  --violet--bg-primary: #F4ECFF;
  --violet--bg-secondary: #F9F5FF;
  --violet--bg-secondary-hover: #F6EDFF;
  --violet--border: #E7D9F5;
  --violet--solid-secondary: #EAD4FF;
  --violet--solid-hover: #713BA8;
  --violet--solid: #8B4BCB;
  --violet--text-secondary: #6C3A9E;
  --violet--text: #341554;
  --violet--text-solid-foreground: #FAF8FF;
}

/**
 * Set up colors for the theme Violet
 */
[theme-base='violet'] {
  --base--bg-primary: var(--violet--bg-primary);
  --base--bg-secondary: var(--violet--bg-secondary);
  --base--bg-secondary-hover: var(--violet--bg-secondary-hover);
  --base--border: var(--violet--border);
  --base--solid-secondary: var(--violet--solid-secondary);
  --base--solid-hover: var(--violet--solid-hover);
  --base--solid: var(--violet--solid);
  --base--text-secondary: var(--violet--text-secondary);
  --base--text: var(--violet--text);
  --base--text-solid-foreground: var(--violet--text-solid-foreground);
}

[theme-accent='violet'] {
  --accent--bg-primary: var(--violet--bg-primary);
  --accent--bg-secondary: var(--violet--bg-secondary);
  --accent--bg-secondary-hover: var(--violet--bg-secondary-hover);
  --accent--border: var(--violet--border);
  --accent--solid-secondary: var(--violet--solid-secondary);
  --accent--solid-hover: var(--violet--solid-hover);
  --accent--solid: var(--violet--solid);
  --accent--text-secondary: var(--violet--text-secondary);
  --accent--text: var(--violet--text);
  --accent--text-solid-foreground: var(--violet--text-solid-foreground);
}
