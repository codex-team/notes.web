:root {
  --text-heading-1 {
      color: var(--color-text-heading);
      font-weight: 700;
      font-size: 2.75rem;
      line-height: 120%;
      letter-spacing: 0.1px;
  }

  --text-heading-2 {
      color: var(--color-text-heading);
      font-weight: 700;
      line-height: 120%;
      font-size: 1.75rem;
      letter-spacing: 0.1px;
  }

  --text-heading-3 {
      color: var(--color-text-heading);
      font-weight: 700;
      font-size: 1.375rem;
      line-height: 120%;
      letter-spacing: 0.1px;
  }

  --text-body {
      color: var(--color-text-main);
      font-weight: 400;
      line-height: 25px;
      font-size: 1rem;
  }

  --text-small {
      color: var(--color-text-main);
      font-weight: 400;
      font-size: 0.875rem;
      line-height: 120%;
      letter-spacing: 0.14px;
  }

  .page {
    &__block {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-xs);
    }

    &__title {
        margin: 0 0 var(--spacing-ms);
    }

    &__title--2 {
        margin: var(--spacing-mm) 0 var(--spacing-xxs);
    }

    &__title--3 {
        margin: var(--spacing-xs) 0 var(--spacing-very-x);
    }

    &__content {
        padding: var(--spacing-xs) 0;

        &-small {
            padding: var(--spacing-very-x) 0;
        }
    }
  }
}
